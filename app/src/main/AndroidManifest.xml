<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.roninn_creations.theproject">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".TheProjectApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">

        <activity
            android:name=".activities.PlacesActivity"
            android:label="@string/title_activity_places">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.PlaceActivity"
            android:label="@string/title_activity_place"
            android:parentActivityName=".activities.PlacesActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.roninn_creations.theproject.activities.PlacesActivity" />
        </activity>

        <activity
            android:name=".activities.AddPlaceActivity"
            android:label="@string/title_activity_add_place"
            android:parentActivityName=".activities.PlacesActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.roninn_creations.theproject.activities.PlacesActivity" />
        </activity>

        <activity
            android:name=".activities.AddReviewActivity"
            android:label="@string/title_activity_add_review"
            android:parentActivityName=".activities.PlaceActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.roninn_creations.theproject.activities.PlaceActivity" />
        </activity>
    </application>

</manifest>